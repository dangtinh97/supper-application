  <meta name="keywords" content="YouPiP, xem video không quảng cáo, nghe nhạc khi tắt màn hình, Picture-in-Picture, YouTube PiP, xem video tiện lợi">

  <!-- Tác giả -->
  <meta name="author" content="YouPiP Team">

  <!-- Meta Open Graph (Facebook, Zalo, etc.) -->
  <meta property="og:title" content="YouPiP - {{data.title}}">
  <meta property="og:description" content="Trải nghiệm xem video không quảng cáo, chế độ PiP và nghe nhạc khi tắt màn hình với YouPiP.">
